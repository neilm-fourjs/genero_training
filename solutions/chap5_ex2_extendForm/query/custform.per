SCHEMA custdemo

LAYOUT (TEXT=%"Store Details", STYLE="buttonsbottom")
VBOX
GRID
{
 [lsid  ][f01  ]
 [lnam  ][f02                             ]

<G g1                                       >
 [ladd  ][f03                 ]
         [f04                 ]
 [lcit  ][f05             ]
 [lstt  ][f6:     :lzip:f07   ]
 [""]
 [lcon  ][f08                              ]
 [lpho  ][f09                ]
 [lcre  ][f10                ]
}   
END -- GRID
END -- VBOX

TABLES   
customer

ATTRIBUTES
f01 = customer.store_num, REQUIRED, COMMENT = %"This is the co-op store number";

GROUP g1 : g1, TEXT=%"Details",GRIDCHILDRENINPARENT, STYLE="small";

LABEL lsid : lsid , TEXT=%"Store #:",   JUSTIFY=RIGHT, SIZEPOLICY=DYNAMIC;
LABEL lnam : lnam , TEXT=%"Name:",      JUSTIFY=RIGHT,STYLE="big", SIZEPOLICY=DYNAMIC;
LABEL ladd : ladd , TEXT=%"Address:",   JUSTIFY=RIGHT, SIZEPOLICY=DYNAMIC;
LABEL lcit : lcit , TEXT=%"City:",      JUSTIFY=RIGHT, SIZEPOLICY=DYNAMIC;
LABEL lstt : lstt , TEXT=%"State:",     JUSTIFY=RIGHT, SIZEPOLICY=DYNAMIC;
LABEL lzip : lzip , TEXT=%"Zip:",       JUSTIFY=RIGHT, SIZEPOLICY=DYNAMIC;
LABEL lcon : lcon , TEXT=%"Contact:",   JUSTIFY=RIGHT, SIZEPOLICY=DYNAMIC;
LABEL lpho : lpho , TEXT=%"Phone:",     JUSTIFY=RIGHT, SIZEPOLICY=DYNAMIC;
LABEL lcre : lcre , TEXT=%"Created:",   JUSTIFY=RIGHT, SIZEPOLICY=DYNAMIC;

f02 = customer.store_name,STYLE="big red";
f03 = customer.addr;
f04 = customer.addr2;
f05 = customer.city;
COMBOBOX f6 = customer.state, INITIALIZER=set_combo_list; -- ITEMS=("IL","IA","WI");
f07 = customer.zipcode;
f08 = customer.contact_name;
f09 = customer.phone;
DATEEDIT f10 = customer.created_on;
